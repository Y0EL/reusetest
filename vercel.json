{
  "version": 2,
  "builds": [
    {
      "src": "apps/backend/dist/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/health.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/api-docs.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/submitReceipt.js",
      "use": "@vercel/node"
    },
    {
      "src": "apps/backend/node_modules/swagger-ui-dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/health", "dest": "api/health.js" },
    { "src": "/api/health", "dest": "api/health.js" },
    { "src": "/api-docs", "dest": "api/api-docs.js" },
    { 
      "src": "/api-docs/(.*\\.css)",
      "dest": "apps/backend/node_modules/swagger-ui-dist/$1",
      "headers": { "Content-Type": "text/css" }
    },
    { 
      "src": "/api-docs/(.*\\.js)",
      "dest": "apps/backend/node_modules/swagger-ui-dist/$1",
      "headers": { "Content-Type": "application/javascript" }
    },
    { 
      "src": "/api-docs/(.*\\.png)",
      "dest": "apps/backend/node_modules/swagger-ui-dist/$1",
      "headers": { "Content-Type": "image/png" }
    },
    { 
      "src": "/submitReceipt", 
      "dest": "api/submitReceipt.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, Accept, Origin, X-Requested-With"
      }
    },
    { 
      "src": "/api/submitReceipt", 
      "dest": "api/submitReceipt.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, Accept, Origin, X-Requested-With"
      }
    },
    { 
      "src": "/api/(.*)", 
      "dest": "api/index.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS, PUT, DELETE",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, Accept, Origin, X-Requested-With"
      }
    },
    { "src": "/(.*)", "dest": "api/index.js" }
  ]
} 